<% include template/header %>
<% include template/dashboard_side_menu %>
	<div class="container-fluid" id="wrapper" style="padding-top: 80px; margin-left: 15px">
		<div class="row-fluid">
			<div class="col-xs-12 card">
				<center><i class="fa fa-lock" style="font-size: 3em; color: black"></i></center>
				<legend style="text-align: center">Recover your password</legend>
				<% if(valid){ %>
					<form class="form">
						<div class="col-md-6 col-md-offset-3">
							<div class="form-group">
								<label>New password</label>
								<input class="form-control" placeholder="Min 6 characters" type="password">
							</div>

							<div class="form-group">
								<label>Re-type new password</label>
								<input class="form-control" placeholder="Min 6 characters" type="password">
							</div>

							<center><button class="btn btn-primary">Save new password</button></center>
						</div>
					</form>
				<% } %>
			</div>
		</div>
	</div>
<% include template/footer %>
